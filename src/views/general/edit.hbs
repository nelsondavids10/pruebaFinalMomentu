<body>

  {{#if user}}
    <div class="container mt-4">

      <div class="card border-secondary">
        <div class="card-header">Editar Registro</div>
        <div class="card-body">
          <form action="/update" method="POST">
            <input id="id" name="id" value="{{ user.id }}" hidden>
            <div class="mb-3">
              <label for="user" class="form-label">Nombres</label>
              <input type="text" required class="form-control" id="names" name="names" tabindex="1" value="{{user.names}}">
            </div>
            <div class="mb-3">
              <label for="rol" class="form-label">Rol</label>
              <select id="rol" required name="rol" class="form-select" value="" tabindex="2">
                <option "selected" value="admin">Admin</option>
                <option "selected" value="data entry">Data entry</option>

              </select>
            </div>
            <div class="mb-3">
              <label for="user" required class="form-label">Usuario</label>
              <input type="text" class="form-control" id="user" name="user" tabindex="1" value="{{user.user}}">
            </div>
            <div class="mb-3">
              <label for="user" required class="form-label">Contrase√±a</label>
              <input type="text" class="form-control" id="password" name="password" tabindex="1" value="{{user.password}}">
            </div>
            <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
            <a href="/users" class="btn btn-secondary">Cancelar</a>
          </form>

        </div>
      </div>
    </div>
    {{/if}}
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>

</html>