<body onload="getData()">


  <div class="container mt-4">

    <div class="card border-secondary">
      <div class="card-header">Nuevo Registro</div>
      <div class="card-body">
        <form action="/createOrder" method="POST">
          <div class="mb-3">
            <label for="user" class="form-label">Nombres del Cliente</label>
            <select id="user" required name="user" class="form-select" aria-label="Default select example" tabindex="2">
            </select>
          </div>

          <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
          <a href="/orders" class="btn btn-secondary">Cancelar</a>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>

  <script>
    function getData() {
      $.ajax({
        type: "get",
        url: '/getUsers',
        dataType: "json",
        success: function (data) {
          $.each(data, function (key, registro) {
            $("#user").append('<option value=' + registro.id + '>' + registro.names + '</option>');
          });
        },
        error: function (data) {
          alert('error');
        }
      });
    }
  </script>
</body>